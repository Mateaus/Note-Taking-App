<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/fragment_color_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.mat.roomdb_mvvm.color.ui.ColorFragment">

        <TextView
            android:id="@+id/fragment_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:text="Choose your Theme"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_color_list_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_below="@+id/fragment_title_tv"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:listitem="@layout/color_item" />

    </RelativeLayout>

</layout>
